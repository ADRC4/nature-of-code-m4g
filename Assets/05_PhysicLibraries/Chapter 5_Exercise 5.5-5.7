using System;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class Exercise2 : MonoBehaviour
{
    Texture2D box;
    public static List<Texture2D> Boxes = new List<Texture2D>();
    private float _x;
    private float _y;

    void Start ()
    {
        box = new Texture2D(25, 25);
        for (int x = 0; x<25; x++)
        {
            for (int y = 0; y<25; y++)
            {
                box.SetPixel(x, y, Color.black);
            }
        }
        box.Apply();
	}


    void Update ()
    {
        if (Input.GetMouseButtonDown(0))
        {
            RaycastHit hit;
            Ray ray = Camera.main.ScreenPointToRay(Input.mousePosition);

            if (Physics.Raycast(ray, out hit))
            {
                Boxes.Add(new Texture2D(25, 25));
                for (int x = 0; x < 25; x++)
                {
                    for (int y = 0; y < 25; y++)
                    {
                        box.SetPixel(x, y, Color.black);
                    }
                }
                box.Apply();
                Physics.gravity = new Vector3(0, -1.0F, 0);
            }
        }
    }

    private void OnGUI()
    {
        var position = new Rect(200, 200, 25, 25);
        GUI.DrawTexture(position, box);

        var mousePosition = new Rect(_x, _y, 25, 25);
        GUI.DrawTexture(mousePosition, box);
    }
}
